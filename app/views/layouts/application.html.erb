<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Inicial - Rede Social</title>
    <!-- Inclui o Tailwind CSS para estilização rápida e responsiva -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Define a fonte Inter como padrão -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5; /* Fundo cinza claro, similar ao Facebook */
        }
    </style>
</head>
<body class="min-h-screen flex flex-col">

    <!-- Cabeçalho (Header) -->
    <header class="bg-white shadow-md py-3 px-4 md:px-8 sticky top-0 z-50">
        <div class="container mx-auto flex items-center justify-between">
            <div class="flex items-center">
                <!-- Logo -->
                <a href="#" class="text-3xl font-bold text-blue-600 mr-4">Social</a>
                <!-- Campo de Pesquisa -->
                <div class="hidden md:flex relative ml-4">
                    <input type="text" placeholder="Pesquisar..." class="bg-gray-100 rounded-full py-2 px-4 pl-10 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
            </div>
            <!-- Menu de navegação e Perfil do Usuário -->
            <nav class="flex items-center space-x-4">
                <button class="bg-blue-600 text-white font-semibold py-2 px-4 rounded-full hover:bg-blue-700 transition duration-300 hidden md:block">
                    Criar Post
                </button>
                <div class="relative group">
                    <img src="https://placehold.co/40x40/7367f0/ffffff?text=DL" alt="Foto de Perfil" class="w-10 h-10 rounded-full border-2 border-blue-500 cursor-pointer object-cover">
                    <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></span>
                </div>
            </nav>
        </div>
    </header>

    <!-- Conteúdo Principal -->
    <main class="container mx-auto mt-4 px-4 md:px-8 flex-grow">
        <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-5 gap-6">

            <!-- Sidebar Esquerda (Hidden on small screens) -->
            <aside class="hidden md:block md:col-span-1 lg:col-span-1">
                <div class="bg-white rounded-lg shadow-sm p-4 sticky top-20">
                    <div class="flex flex-col items-center mb-4">
                        <img src="https://placehold.co/80x80/7367f0/ffffff?text=DL" alt="Foto de Perfil" class="w-20 h-20 rounded-full border-4 border-blue-500 object-cover">
                        <h2 class="mt-2 text-lg font-bold text-gray-800">Douglas Leonard</h2>
                        <p class="text-sm text-gray-500">Desenvolvedor Web</p>
                    </div>
                    <ul class="space-y-2 text-gray-600">
                        <li>
                            <a href="#" class="flex items-center p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                                <svg class="w-5 h-5 mr-3 text-blue-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                                <span>Página Inicial</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                                <svg class="w-5 h-5 mr-3 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                                <span>Comunidades</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                                <svg class="w-5 h-5 mr-3 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M5.5 13a3.5 3.5 0 01-.369-6.983 2.5 2.5 0 113.715-3.161A4.25 4.25 0 0115.5 4.5a3.5 3.5 0 11-.121 7l-6.815 1.517a4.25 4.25 0 01-.121 7l-6.815 1.517z"></path></svg>
                                <span>Amigos</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                                <svg class="w-5 h-5 mr-3 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h3v1a3 3 0 003 3h4a3 3 0 003-3v-1h3a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zm-1 9V9h2v2h-2zm-2 0V9h2v2H7z"></path></svg>
                                <span>Notificações</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </aside>

            <!-- Feed Central -->
            <div class="col-span-1 md:col-span-2 lg:col-span-3">

                <!-- Área de criação de Post -->
                <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
                    <div class="flex items-center space-x-3 mb-4">
                        <img src="https://placehold.co/40x40/7367f0/ffffff?text=DL" alt="Foto de Perfil" class="w-10 h-10 rounded-full object-cover">
                        <input type="text" id="newPostText" placeholder="O que você está pensando, Douglas?" class="flex-grow bg-gray-100 rounded-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300">
                    </div>
                    <div class="flex justify-end">
                        <button id="postButton" class="bg-blue-600 text-white font-semibold py-2 px-6 rounded-full hover:bg-blue-700 transition duration-300">
                            Publicar
                        </button>
                    </div>
                </div>

                <!-- Feed de Posts (área onde os posts serão injetados) -->
                <div id="postsContainer" class="space-y-6">
                    <!-- Posts de exemplo (serão injetados via JS) -->
                </div>
            </div>

            <!-- Sidebar Direita (Hidden on small screens) -->
            <aside class="hidden lg:block lg:col-span-1">
                <div class="sticky top-20">
                    <!-- Seção de Anúncios -->
                    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
                        <h3 class="font-bold text-gray-800 mb-2">Anúncios</h3>
                        <div class="bg-gray-100 h-24 rounded-lg flex items-center justify-center text-gray-400">
                            Anúncio aqui
                        </div>
                    </div>
                    <!-- Seção de Pessoas que talvez você conheça -->
                    <div class="bg-white rounded-lg shadow-sm p-4">
                        <h3 class="font-bold text-gray-800 mb-4">Pessoas que talvez você conheça</h3>
                        <ul class="space-y-3">
                            <li class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <img src="https://placehold.co/40x40/f44336/ffffff?text=A" alt="Avatar" class="w-10 h-10 rounded-full object-cover">
                                    <span class="ml-3 font-semibold text-gray-700">Ana Souza</span>
                                </div>
                                <button class="text-blue-500 text-sm hover:underline">Adicionar</button>
                            </li>
                            <li class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <img src="https://placehold.co/40x40/4caf50/ffffff?text=B" alt="Avatar" class="w-10 h-10 rounded-full object-cover">
                                    <span class="ml-3 font-semibold text-gray-700">Bruno Lima</span>
                                </div>
                                <button class="text-blue-500 text-sm hover:underline">Adicionar</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
    </main>

    <!-- Rodapé (Footer) -->
    <footer class="bg-gray-800 text-white text-center py-4 mt-6">
        <p>&copy; 2025 Minha Rede Social. Todos os direitos reservados.</p>
    </footer>

    <!-- JavaScript para interatividade -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const postsContainer = document.getElementById('postsContainer');
            const postButton = document.getElementById('postButton');
            const newPostText = document.getElementById('newPostText');

            const samplePosts = [
                {
                    user: 'Julia Alvares',
                    avatar: 'https://placehold.co/40x40/e91e63/ffffff?text=JA',
                    time: '1h atrás',
                    content: 'Tive uma ótima corrida hoje de manhã! A disciplina é o caminho para a liberdade. #constância #desenvolvimentopessoal',
                    image: null
                },
                {
                    user: 'Carlos Mendes',
                    avatar: 'https://placehold.co/40x40/9c27b0/ffffff?text=CM',
                    time: '3h atrás',
                    content: 'Terminei o livro "Nada Pode Me Ferir". A mentalidade de David Goggins é realmente inspiradora. Recomendo a todos que buscam mais disciplina.',
                    image: null
                },
            ];

            // Função para criar o HTML de um post
            function createPostElement(postData) {
                const postDiv = document.createElement('div');
                postDiv.className = 'bg-white rounded-lg shadow-sm p-4';

                postDiv.innerHTML = `
                    <!-- Cabeçalho do Post -->
                    <div class="flex items-center mb-4">
                        <img src="${postData.avatar}" alt="Avatar" class="w-12 h-12 rounded-full border-2 border-gray-200 object-cover">
                        <div class="ml-3">
                            <h4 class="font-bold text-gray-800">${postData.user}</h4>
                            <p class="text-sm text-gray-500">${postData.time}</p>
                        </div>
                    </div>
                    <!-- Conteúdo do Post -->
                    <p class="text-gray-700 mb-4">${postData.content}</p>
                    ${postData.image ? `<img src="${postData.image}" alt="Post image" class="rounded-lg mb-4 w-full h-auto object-cover">` : ''}
                    <!-- Ações do Post (Curtir, Comentar) -->
                    <div class="flex items-center space-x-4 text-gray-500 text-sm mt-2">
                        <button class="flex items-center space-x-1 hover:text-blue-600 transition duration-200">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>
                            <span>Curtir</span>
                        </button>
                        <button class="flex items-center space-x-1 hover:text-blue-600 transition duration-200">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7s-8-3.134-8-7 3.582-7 8-7 8 3.134 8 7zm-8 4a1 1 0 100-2 1 1 0 000 2zm-3-2a1 1 0 100-2 1 1 0 000 2zm6 0a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
                            <span>Comentar</span>
                        </button>
                    </div>
                `;
                return postDiv;
            }

            // Renderiza os posts de exemplo
            samplePosts.forEach(post => {
                postsContainer.appendChild(createPostElement(post));
            });

            // Adiciona um novo post dinamicamente ao clicar no botão
            postButton.addEventListener('click', () => {
                const content = newPostText.value.trim();
                if (content) {
                    const newPostData = {
                        user: 'Douglas Leonard',
                        avatar: 'https://placehold.co/40x40/7367f0/ffffff?text=DL',
                        time: 'agora mesmo',
                        content: content,
                        image: null
                    };
                    const newPostElement = createPostElement(newPostData);
                    postsContainer.prepend(newPostElement); // Adiciona o novo post no topo
                    newPostText.value = ''; // Limpa o input
                }
            });
        });
    </script>
</body>
</html>
